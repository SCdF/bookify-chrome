{
  "manifest_version": 2,

  "name": "Bookify",
  "description": "Makes webpages read like a book! With Readability.",
  "version": "1.0",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "http://readability.com/*",
    "https://readability.com/*"
  ],
  "browser_action": {
    "default_title": "Bookify!",
    "default_icon": "images/icon_48.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}